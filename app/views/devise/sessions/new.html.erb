<h2>ログイン</h2>
<br>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true ,class: 'form-control',placeholder: "メールアドレス"%>
  </div>

  <div class="field">
    <%= f.label :パスワード %><br />
    <%= f.password_field :password, autocomplete: "off" ,class: 'form-control',placeholder: "パスワード"%>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :メールとパスワードを保存 %>
    </div>
  <% end -%>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <button type="submit" class="btn btnnew">ログイン</button>
        </div>
    </div>
<% end %>

<%= render "devise/shared/links" %>
